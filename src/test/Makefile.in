# @configure_input@

CONFIG_D = ../config
CONFIG_H = $(wildcard $(CONFIG_D)/*.h) $(wildcard $(CONFIG_D)/*/*.h)

COMMON_D = ../common
COMMON_H = $(filter-out %.p.h, $(wildcard $(COMMON_D)/*.h))
SYSINFO_INC = $(COMMON_D)/sysinfo.inc
COMMON_INCLUDE = -I..

THIRDPARTY_D = ../../3rdparty
THIRDPARTY_INCLUDE = -I$(THIRDPARTY_D)

LIBCONFIG_D = $(THIRDPARTY_D)/libconfig
LIBCONFIG_OBJ = $(addprefix $(LIBCONFIG_D)/, libconfig.o grammar.o scanctx.o \
                scanner.o strbuf.o)
LIBCONFIG_H = $(addprefix $(LIBCONFIG_D)/, libconfig.h grammar.h parsectx.h \
              scanctx.h scanner.h strbuf.h wincompat.h)

MT19937AR_D = $(THIRDPARTY_D)/mt19937ar
MT19937AR_OBJ = $(MT19937AR_D)/mt19937ar.o
MT19937AR_H = $(MT19937AR_D)/mt19937ar.h

# Legacy tests
OLDTEST_C = oldtest_libconfig.c oldtest_spinlock.c
OLDTEST_OBJ = $(addprefix obj/, $(patsubst %c,%o,%(OLDTEST_C)))
OLDTEST_H =
OLDTEST_DEPENDS = $(COMMON_D)/obj_sql/common_sql.a $(COMMON_D)/obj_all/common.a $(MT19937AR_OBJ) $(LIBCONFIG_OBJ) $(SYSINFO_INC)

OLDTESTS_ALL = oldtest_libconfig oldtest_spinlock

EXTRAMODULES =

ifeq (@HAVE_CMOCKA@,yes)
	TEST_NAMES = cbasetypes utils
	TEST_H =
	TEST_DEPENDS = $(MT19937AR_OBJ) $(LIBCONFIG_OBJ)
else
	TEST_NAMES =
	TEST_H =
	TEST_DEPENDS = no_cmocka
endif
TESTS = $(addprefix test_, $(TEST_NAMES))
RUNTESTS = $(addprefix run-, $(TESTS))
TEST_C = $(addsuffix .c, $(TESTS))
TEST_OBJ = $(addprefix obj/, $(patsubst %c,%o,$(TEST_C)))

@SET_MAKE@

CC = @CC@
export CC

#####################################################################
.PHONY: all $(OLDTESTS_ALL) oldtest $(TESTS) clean buildclean run $(RUNTESTS)

all: $(TESTS) Makefile

oldtest: $(OLDTESTS_ALL)

buildclean:
	@echo "	CLEAN	test (build temp files)"
	@rm -rf *.o obj

clean: buildclean
	@echo "	CLEAN	test"
	@rm -rf ../../oldtest_*@EXEEXT@ ../../test_*@EXEEXT@

#####################################################################

Makefile: Makefile.in
	@$(MAKE) -C ../.. src/test/Makefile

$(SYSINFO_INC): $(OLDTEST_C) $(OLDTEST_H) $(TEST_C) $(TEST_H) $(COMMON_H) $(CONFIG_H) $(MT19937AR_H) $(LIBCONFIG_H)
	@echo "	MAKE	$@"
	@$(MAKE) -C ../.. sysinfo

run: $(RUNTESTS)

$(RUNTESTS): run-%: %
	@echo "	TEST	$<"
	@(cd ../..; ./$<)

# object directories

obj:
	@echo "	MKDIR	obj"
	@-mkdir obj

# Module dependencies
../../test_utils@EXEEXT@: EXTRAMODULES := obj/module_utils.o
../../test_utils@EXEEXT@: obj/module_utils.o

# executables

$(TESTS): %: ../../%@EXEEXT@ | obj


$(OLDTESTS_ALL): oldtest_%: ../../oldtest_%@EXEEXT@
	@echo "	TEST	$@"

../../oldtest_%@EXEEXT@: obj/oldtest_%.o $(OLDTEST_DEPENDS) Makefile
	@echo "	LD	$(notdir $@)"
	@$(CC) @STATIC@ @LDFLAGS@ -o $@ $< $(COMMON_D)/obj_all/common.a $(COMMON_D)/obj_sql/common_sql.a \
		$(MT19937AR_OBJ) $(LIBCONFIG_OBJ) @LIBS@ @MYSQL_LIBS@

../../test_%@EXEEXT@: obj/test_%.o $(TEST_DEPENDS) Makefile $(EXTRAMODULES)
	@echo "	LD	$(patsubst ../../%,%,$@)"
	@$(CC) @LDFLAGS@ -o $@ $(TEST_DEPENDS) @LIBS@ @MYSQL_LIBS@ @CMOCKA_LIBS@ $< $(EXTRAMODULES)

# object files

obj/oldtest_%.o: oldtest_%.c $(OLDTEST_H) $(COMMON_H) $(CONFIG_H) $(MT19937AR_H) $(LIBCONFIG_H) $(SYSINFO_INC) | obj
	@echo "	CC	$<"
	@$(CC) @CFLAGS@ @DEFS@ $(COMMON_INCLUDE) $(THIRDPARTY_INCLUDE) @MYSQL_CFLAGS@ @CPPFLAGS@ -c $(OUTPUT_OPTION) $<

obj/%.o: %.c $(TEST_H) $(COMMON_H) $(CONFIG_H) $(MT19937AR_H) $(LIBCONFIG_H) | obj
	@echo "	CC	$<"
	@$(CC) @CFLAGS@ @CMOCKA_CFLAGS@ @DEFS@ $(MT19937AR_INCLUDE) $(LIBCONFIG_INCLUDE) -DWITH_SQL @MYSQL_CFLAGS@ @CPPFLAGS@ -DUNIT_TESTING -c $(OUTPUT_OPTION) $<

# missing object files
$(COMMON_D)/obj_all/common.a:
	@echo "	MAKE	$@"
	@$(MAKE) -C $(COMMON_D) sql

$(COMMON_D)/obj_sql/common_sql.a:
	@echo "	MAKE	$@"
	@$(MAKE) -C $(COMMON_D) sql

$(MT19937AR_OBJ):
	@echo "	MAKE	$@"
	@$(MAKE) -C $(MT19937AR_D)

$(LIBCONFIG_OBJ):
	@echo "	MAKE	$@"
	@$(MAKE) -C $(LIBCONFIG_D)

no_cmocka:
	@echo "CMocka disabled by the configure script. Tests won't be compiled."
	@exit 1
